import React from 'react';
import './Card.scss';

interface CardProps {
  title: string;
  description: string;
  image: string;
}

const Card: React.FC<CardProps> = ({ title, description, image }) => {
  return (
    <div className="card">
      <img src={image} alt={title} />
      <h3>{title}</h3>
      <p>{description}</p>
    </div>
  );
};

export default Card;

@import '../styles/variables';

.card {
  background-color: white;
  border-radius: $border-radius;
  padding: 1rem;
  text-align: center;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  width: 250px;
  @include transition(all);

  &:hover {
    transform: translateY(-5px);
  }

  img {
    width: 100%;
    border-radius: $border-radius;
  }

  h3 {
    color: $primary-color;
    margin: 0.5rem 0;
  }

  p {
    color: $text-color;
  }
}

import React from 'react';
import './Navbar.scss';

